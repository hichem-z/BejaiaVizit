<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_margin="8dp"
    app:cardElevation="10dp"
    android:backgroundTint="@color/colorEndBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/back_banck"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
>
            <ImageView
                android:id="@+id/imagebank"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:padding="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:weightSum="10"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/namebank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingBottom="2dp"

                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:paddingStart="5dp"

                />
            <TextView
                android:id="@+id/adressebank"
                android:layout_width="match_parent"
                android:paddingStart="5dp"
                android:paddingBottom="2dp"

                android:textColor="@color/text_bank"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">
            <TextView
                android:paddingBottom="2dp"

                android:paddingStart="5dp"
                android:textAlignment="textStart"
                android:id="@+id/telbank"
                android:textColor="@color/text_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView

                android:paddingStart="5dp"
                android:textAlignment="center"
                android:id="@+id/appeler"
                android:paddingBottom="2dp"
                android:layout_marginStart="3dp"
                android:text="@string/appeler"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/primary2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/bank_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/location_on_24"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>