<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second"
    tools:context=".InscriptionFragment">


    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ajoutpho"
        app:c_border="true"
        app:c_border_color="#ffb229"
        android:background="@color/second"
        app:c_border_width="1dp" />

    <EditText
        android:id="@+id/nameEt"
        android:layout_below="@id/profileIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        android:layout_marginEnd="25dp"
        android:inputType="textPersonName|textCapWords"
        android:hint="Nom"
        android:textColorHint="@color/colorGray1"
        android:background="@drawable/bg_item"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/prenomEt"
        android:textColor="@color/black"
        android:textSize="14sp"

        android:layout_below="@id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="textPersonName|textCapWords"
        android:hint="Prénom"
        android:textColorHint="@color/colorGray1"

        android:background="@drawable/bg_item"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/phoneEt"
        android:layout_below="@id/prenomEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"

        android:layout_marginTop="4dp"
        android:layout_marginStart="25dp"
        android:textColorHint="@color/colorGray1"

        android:layout_marginEnd="25dp"
        android:inputType="phone"
        android:hint="Téléphone (0X XX XX XX XX)"
        android:background="@drawable/bg_item"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/emailEt"
        android:layout_below="@id/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="@color/colorGray1"
        android:background="@drawable/bg_item"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/dobEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEt"
        android:layout_marginStart="25dp"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_item"
        android:hint="Age"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGray1" />

    <EditText
        android:id="@+id/bioEt"
        android:layout_below="@id/dobEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"

        android:layout_marginTop="6dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="textCapSentences|textMultiLine"
        android:hint="Courte description"
        android:minHeight="70dp"
        android:textColorHint="@color/colorGray1"
        android:background="@drawable/bg_item"
        android:padding="5dp"
        android:gravity="start"
        />
    <Button
        android:id="@+id/btnsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bioEt"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:layout_marginEnd="25dp"
        android:background="@drawable/back_btn_enr"
        android:text="Enregistrer"

        android:padding="10dp" />


</RelativeLayout>