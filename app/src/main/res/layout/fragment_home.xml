                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@mipmap/hotel"
