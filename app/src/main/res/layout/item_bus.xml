<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_margin="8dp"
    app:cardElevation="10dp"
    android:backgroundTint="@color/colorEndBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/back_banck"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >
            <ImageView
                android:id="@+id/imageBus"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:padding="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:weightSum="10"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/numbus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="2dp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:paddingStart="5dp"

                />
            <TextView
                android:id="@+id/txtdepart"
                android:layout_width="match_parent"
                android:paddingStart="5dp"
                android:paddingBottom="2dp"

                android:textColor="@color/text_bank"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="12sp"
                />
            <TextView

                android:paddingStart="5dp"
                android:textAlignment="textStart"
                android:id="@+id/txtarrive"
                android:textColor="@color/text_bank"
                android:paddingBottom="2dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imagedepart"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:src="@drawable/location_on_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Depart"
                android:textColor="@color/black"
                android:gravity="top|center"
                />
            <ImageView
                android:id="@+id/imagearrive"
                android:layout_width="40dp"
                android:background="@color/white"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:src="@drawable/location_on_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:gravity="top|center"
                android:text="ArrivÃ©"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>